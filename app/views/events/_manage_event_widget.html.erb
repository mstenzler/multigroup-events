<% if can? :manage, event %>
  <div class="btn-group">
    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
      <span class="glyphicon glyphicon-cog"></span>
    </button>
    <ul class="dropdown-menu pull-right" role="menu">
      <li>
        <%= link_to edit_event_path(event) do %>
          <span class="glyphicon glyphicon-pencil"></span> Edit
        <% end %>
      </li>
      <li class="divider"></li>

      <li>
        <%= link_to event, :method => :delete,  data: { confirm: 'Are you sure you want to delete this event?' } do %>
          <span class="glyphicon glyphicon-remove"></span> Delete
        <% end %>
      </li>

      <li class="divider"></li>
      <li>
        <%= link_to show_event_rsvp_print_path(event), target: "_blank" do %>
          <span class="glyphicon glyphicon-print"></span> Admin Print List
        <% end %>
      </li>
    </ul>
  </div>
<% end %>